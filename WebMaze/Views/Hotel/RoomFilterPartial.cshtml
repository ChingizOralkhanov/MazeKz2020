@using WebMaze.Models.Hotel
@model RoomsViewModel

<div class="form-check-inline">
    <select asp-items="@Html.GetEnumSelectList<SortParameters>()" asp-for="@Model.SortParameters">
        <option disabled selected>Sort Price By</option>
    </select>
</div>
<div class="form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="checkType" asp-for="@Model.LuxRoomsOnly">
    <label class="form-check-label" for="checkRooms">
        Lux Rooms Only
    </label>
</div>
<div class="form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="checkType" asp-for="@Model.SingleRoomsOnly">
    <label class="form-check-label" for="checkRooms">
        Single Rooms Only
    </label>
</div>
<div class="form-check-inline">
    <input class="form-check-input" type="checkbox" value="" id="checkType" asp-for="@Model.DoubleRoomsOnly">
    <label class="form-check-label" for="checkRooms">
        Double Rooms Only
    </label>
</div>
<div class="form-check-inline">
    <a class="btn btn-outline-secondary" asp-controller="Hotel" asp-action="Rooms" asp-route-sortParameters="@Model.SortParameters" asp-route-singleRoomsOnly="@Model.SingleRoomsOnly" asp-route-luxRoomsOnly="@Model.LuxRoomsOnly" asp-route-doubleRoomsOnly="@Model.DoubleRoomsOnly">Search</a>
</div>