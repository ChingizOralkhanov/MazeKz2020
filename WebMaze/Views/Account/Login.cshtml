@using WebMaze.Models.Account
@model LoginViewModel

@section Scripts{
    <script src="~/js/login-validation.js"></script>
}

<div>
    Страница логина

    <form action="@Url.Action("Login", "Account")" method="post">
        @Html.HiddenFor(x => x.ReturnUrl)
        @Html.ValidationSummary(true)
        <div>
            @Html.DisplayNameFor(x => x.Login):
            @Html.TextBoxFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div>
            @Html.DisplayNameFor(x => x.Password):
            @Html.TextBoxFor(x => x.Password, new { @type = "password" })
            @Html.ValidationMessageFor(x => x.Password)
        </div>
        <div>
            <input type="submit" value="Войти" />
        </div>
    </form>
</div>

<table>
    @for (int i = 0; i < 10; i++)
    {
        <tr data-id="@i">
            <td>1</td>
            <td>2</td>
            <td>3</td>
        </tr>
    }
</table>

<script>
    var id = 2;
    $("tr[data-id='" + id + "']").addClass('ative');
</script>
